<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/small_padding"
    tools:context="com.culturage.oceans_eleven.culturage.newsFeed.ProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="#FFFFFF">
            <!-- A dummy view to draw the focus-->
            <ImageButton
                android:id="@+id/back_profileGuest"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/tiny_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="0"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_goback" />

            <LinearLayout
                android:id="@+id/dummyViewGuest1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" />

            <ProgressBar
                android:id="@+id/progress_bar_profileGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/dummyViewGuest2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/upload_image_size"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePictureGuest"
                android:layout_width="@dimen/upload_image_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_no_image" />

        </LinearLayout>


        <TextView
            android:id="@+id/profileFullNameGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Full Name"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/profileFullNameTextGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/profileUsernameGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Username"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/profileUsernameTextGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileEmailGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Email"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/profileEmailTextGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileLocationGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Location"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/profileLocationTextGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileBirthdayGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Birthday (YYYY-MM-DD)"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/profileBirthdayTextGuest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
