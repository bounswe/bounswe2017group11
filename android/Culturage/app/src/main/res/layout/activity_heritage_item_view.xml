<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/her_item_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:background="#B2EBF2"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="heritage_item_main_photo"
        android:scaleType="centerCrop"
        android:id="@+id/her_item_photo" />
    <!--android:src="@mipmap/ic_launcher"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/her_item_description_title"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/her_item_description"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/her_item_date_title"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/her_item_date"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/her_item_location_title"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/her_item_location"
            android:background="#B2EBF2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>