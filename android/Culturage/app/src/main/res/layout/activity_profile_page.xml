<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/small_padding"
    tools:context="com.culturage.oceans_eleven.culturage.newsFeed.ProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="#FFFFFF">
            <!-- A dummy view to draw the focus-->
            <ImageButton
                android:id="@+id/logout"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/tiny_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="0"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_logout" />

            <LinearLayout
                android:id="@+id/dummyView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" />

            <ImageButton
                android:id="@+id/saveProfile"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/tiny_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="0"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_confirm" />

            <ImageButton
                android:id="@+id/discard_changes"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/tiny_padding"
                android:layout_weight="0"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cancel" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/upload_image_size"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CulturagePicture"
                android:layout_width="@dimen/upload_image_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/culturage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/medium_padding">


                <ImageButton
                    android:id="@+id/uploadProfilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:src="@mipmap/ic_camera" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Name"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileNameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint=" Name"
            android:paddingStart="@dimen/small_padding"
            android:text="Ocean's"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/profileLastName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Lastname"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileLastnameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Lastname"
            android:paddingStart="@dimen/small_padding"
            android:text="Eleven"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Lastname"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileUsernameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Username"
            android:paddingStart="@dimen/small_padding"
            android:text="username"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height">

            <TextView
                android:id="@+id/profileDateBirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="  Date Of Birth"
                android:paddingRight="@dimen/small_padding"
                android:textColor="@color/hint_color"
                android:textStyle="italic" />


            <Spinner
                android:id="@+id/birthDaySpinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/birthMonthSpinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/birthYearSpinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1" />


        </LinearLayout>


        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Email"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Email"
            android:paddingStart="@dimen/small_padding"
            android:text="culturage@oceanseleven.com"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/profileAboutYou"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="About You"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileAboutEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:gravity="top"
            android:hint=" About You"
            android:inputType="textMultiLine"
            android:text=" We are great!!!"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

    </LinearLayout>

</ScrollView>