<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.culturage.oceans_eleven.culturage.newsFeed.ProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="@color/primary_blue">
            <!-- A dummy view to draw the focus-->
            <ImageButton
                android:id="@+id/logout"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/tiny_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="0"
                android:background="@color/primary_blue"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logout" />

            <LinearLayout
                android:id="@+id/dummyView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" />

            <ProgressBar
                android:id="@+id/progress_bar_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/dummyView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" />


            <ImageButton
                android:id="@+id/saveProfile"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/tiny_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="0"
                android:background="@color/primary_blue"
                android:scaleType="centerInside"
                android:src="@drawable/ic_confirm" />

            <ImageButton
                android:id="@+id/discard_changes"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/tiny_padding"
                android:layout_weight="0"
                android:background="@color/primary_blue"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cancel" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/upload_image_size"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="@dimen/upload_image_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_no_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/medium_padding">


                <ImageButton
                    android:id="@+id/uploadProfilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:src="@mipmap/ic_camera" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/profileFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Full Name"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileFullNameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Full Name"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Username"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileUsernameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Username"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Email"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Email"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Location"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileLocationEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Location"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/profileBirthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:gravity="start"
            android:text="Birthday (YYYY-MM-DD)"
            android:textColor="@color/hint_color"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/profileBirthdayEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/blue_border"
            android:ems="10"
            android:hint="Birthday"
            android:paddingStart="@dimen/small_padding"
            android:text=""
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
