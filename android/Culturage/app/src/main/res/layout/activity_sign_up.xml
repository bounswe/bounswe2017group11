<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.culturage.oceans_eleven.culturage.LoginActivity">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="@dimen/login_form_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="8dp">

        <AutoCompleteTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:hint="ThisSignupPage"
            android:inputType="textAutoComplete"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/login_page_text_color"
            android:textColorHint="@android:color/secondary_text_dark" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:textCursorDrawable="@null"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/login_page_text_color"
            android:textColorHint="@android:color/secondary_text_dark" />


        <Button
            android:id="@+id/sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:text="@string/action_sign_in"
            android:textStyle="bold"
            android:textColor="@color/login_page_text_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="32dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/login_page_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/middle_line_text"
            style="?android:textAppearanceLarge"
            android:textColor="@color/login_page_text_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/login_page_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/need_an_account"
            style="?android:textAppearanceMedium"
            android:textColor="@color/login_page_text_color"
            android:textStyle="italic"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="@dimen/login_form_width"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_add_user"
            android:gravity="start|center_vertical"
            android:text="@string/sign_up"
            android:textColor="@color/login_page_text_color"
            android:background="@drawable/border" />
    </LinearLayout>
</LinearLayout>
